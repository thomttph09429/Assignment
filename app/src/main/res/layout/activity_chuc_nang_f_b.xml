<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context="com.example.thomttph09429.ChucNangFBActivity">

    <EditText
        android:hint="link"
        android:id="@+id/edtlink_chucnangfb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/btnsharelink_chucnangfb"
        android:text="share link"
        android:background="@drawable/my1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/chonimg_chucnangfb"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <Button
        android:background="@drawable/my1"

        android:layout_gravity="center_horizontal"
        android:id="@+id/btnshareimg_chucnangfb"
        android:text="share image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <VideoView
        android:id="@+id/video_chucnangfb"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnchonvideo_chucnangfb"
            android:text="chọn video"
            android:layout_weight="1"
            android:background="@drawable/my1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:background="@drawable/my1"

            android:id="@+id/btnsharevideo_chucnangfb"
            android:text="share video"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>